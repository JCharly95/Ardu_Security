<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ardu_sec_logo_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ardu_Security"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name=".EditDataUsSpActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".AlarmActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".EditDataUsTxtActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".UserActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".CommentsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".GenReportsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".StationActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".MenuStationsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".DashboardActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ResetPassActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".Notifications"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ardu_sec_logo_round" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/negro" />
    </application>

</manifest>