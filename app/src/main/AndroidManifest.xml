<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permisos de Accesos al Dispositivo: Internet, Estado de la conexion, Lectura de Archivos, Escritura de Archivos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ardu_sec_logo_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ardu_Security"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".admin.ManageSisStationsActivity"
            android:exported="false" />
        <activity
            android:name=".admin.ManageSisUsersActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.ManageSisActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditDataSpActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.AlarmActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditDataTxtActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.UserActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.CommentsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.GenReportsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.StationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.MenuStationsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResetPassActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".user.Notifications"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ardu_sec_logo_round" />
        <!--
 Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/negro" />
    </application>

</manifest>