<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/azulAlicia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassActivity">

    <LinearLayout
        android:id="@+id/ForgPassView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/lblForPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LblForPass"
                android:textColor="@color/negro"
                android:textSize="25sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnInfoRecPass"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/teal_200"
                android:contentDescription="@string/btnHelp"
                app:srcCompat="@android:drawable/ic_menu_help" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/lblFgtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headLblForPass"
            android:textColor="@color/negro"
            android:gravity="center"
            android:textSize="18sp"
            android:visibility="visible"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/cyan_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtUserForPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="text"
                android:hint="@string/txtUsName"
                android:inputType="textPersonName"
                android:textColor="@color/negro"
                android:textColorHint="@color/darkgray"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/cyan_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEmaForPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="email"
                android:hint="@string/txtIngreCorr"
                android:inputType="textEmailAddress"
                android:textColor="@color/negro"
                android:textColorHint="@color/darkgray"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/lblRespSel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/lblPreg"
            android:textColor="@color/negro"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/negro"
            app:cardCornerRadius="4dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spPregsSegForPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:textColor="@color/negro"
                android:dropDownWidth="wrap_content"
                android:entries="@array/lstSavQues"/>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/cyan_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtResPregForPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="text"
                android:hint="@string/txtRespKey"
                android:inputType="text"
                android:textColor="@color/negro"
                android:textColorHint="@color/darkgray"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/btnSendRecPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnComproResp"
            android:textSize="16sp"
            android:visibility="visible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>