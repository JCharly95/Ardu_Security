<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".AlarmActivity">

    <TextView
        android:id="@+id/lblHeadAlarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/headAlarma"
        android:textSize="25sp"
        android:textColor="@color/negro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swAlarma"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="9dp"
        android:text="@string/lblEstaVal"
        android:background="@color/azulAlicia"
        android:textColor="@color/negro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblHeadAlarma" />

    <RadioGroup
        android:id="@+id/rbgCondAlarma"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swAlarma">

        <TextView
            android:id="@+id/lblCondAla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/lblCondAla"
            android:textSize="20sp"
            android:textColor="@color/negro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" />

        <RadioButton
            android:id="@+id/rbAlaActi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/rojo"
            android:textColor="@color/rojo"
            android:layout_marginBottom="5dp"
            android:text="@string/alCondActi"
            android:textSize="16sp"
            android:enabled="false"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/rbAlaOper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/verde"
            android:textColor="@color/verde"
            android:layout_marginBottom="5dp"
            android:text="@string/alCondOper"
            android:textSize="16sp"
            android:enabled="false"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/rbAlaInac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/gris"
            android:textColor="@color/gris"
            android:layout_marginBottom="5dp"
            android:text="@string/alCondInac"
            android:textSize="16sp"
            android:enabled="false"
            android:visibility="visible" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>