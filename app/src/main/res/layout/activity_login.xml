<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/azulAlicia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:id="@+id/LoginView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/azulAlicia">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImgLogo"
                    android:layout_width="188dp"
                    android:layout_height="152dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgLogoPan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/imgLogo"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/logo_v2" />
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btnInfoLog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/btnHelp"
                    android:backgroundTint="@color/teal_200"
                    app:srcCompat="@android:drawable/ic_menu_help" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lblAcces"
                    android:textColor="@color/negro"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RadioButton
                        android:id="@+id/rbSelEma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@android:drawable/sym_action_email"
                        android:drawableEnd="@drawable/key"
                        android:text="@string/btnAccUsPass"
                        android:textColor="@color/negro" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/rbSelGoo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
                        android:text="@string/btnAccGoogle"
                        android:textColor="@color/negro" />
                </RadioGroup>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <EditText
                android:id="@+id/txtUserLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:autofillHints="text"
                android:drawableStart="@drawable/user"
                android:drawableTint="@color/negro"
                android:hint="@string/txtUsName"
                android:inputType="textPersonName"
                android:textColor="@color/negro"
                android:textColorHint="@color/darkgray"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/LLLogEma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autofillHints="emailAddress"
                    android:drawableStart="@android:drawable/sym_action_email"
                    android:drawableTint="@color/negro"
                    android:hint="@string/txtEmail"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/negro"
                    android:textColorHint="@color/darkgray" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <EditText
                    android:id="@+id/txtPass"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autofillHints="password"
                    android:drawableStart="@drawable/key"
                    android:hint="@string/txtPass"
                    android:inputType="textPassword"
                    android:textColor="@color/negro"
                    android:textColorHint="@color/darkgray" />

                <CheckBox
                    android:id="@+id/chbPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/chbPass"
                    android:textColor="@color/negro"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnLogEma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/verde"
                    android:drawableLeft="@android:drawable/sym_action_email"
                    android:drawableRight="@android:drawable/ic_menu_send"
                    android:drawableTint="@color/blanco"
                    android:text="@string/btnLogEma"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnLogGoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blanco"
                android:drawableLeft="@drawable/common_google_signin_btn_icon_dark"
                android:drawableRight="@android:drawable/ic_menu_send"
                android:text="@string/btnLogGoo"
                android:textColor="@color/negro"
                android:textSize="16sp"
                android:visibility="gone"
                app:strokeColor="@color/negro"
                app:strokeWidth="2dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:drawableLeft="?attr/actionModePasteDrawable"
                android:text="@string/lblReg"
                android:textSize="16sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnLstContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawableLeft="@android:drawable/ic_menu_manage"
                android:text="@string/btnLstCPass"
                android:textSize="16sp"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/txtCopyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="@string/lblCopyright"
                android:textColor="@color/negro"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>