<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/azulAlicia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDataUsTxtActivity">

    <ScrollView
        android:id="@+id/ActuInfoUsTxtView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/azulAlicia">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lblHeadEditTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/headEdit"
                    android:textColor="@color/negro"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="83dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btnInfoActuTxt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/teal_200"
                    android:contentDescription="@string/btnHelp"
                    app:srcCompat="@android:drawable/ic_menu_help" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/lblOldDatTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblOldVal"
                android:textSize="18sp"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="@color/negro"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/canela"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/txtOldEditDatTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/txtViejo"
                    android:textColor="@color/blanco"
                    app:drawableLeftCompat="@android:drawable/ic_dialog_alert" />
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/lblNewDatTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblNewVal"
                android:gravity="center"
                android:textSize="18sp"
                android:visibility="visible"
                android:textColor="@color/negro"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/linLayActuEma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblActuCorr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lblEmaActu"
                    android:textColor="@color/negro"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RadioButton
                        android:id="@+id/rbSelEmaActu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@android:drawable/sym_action_email"
                        android:text="@string/lblRbCorr"
                        android:textColor="@color/negro" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/rbSelGooActu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
                        android:text="@string/btnAccGoogle"
                        android:textColor="@color/negro" />
                </RadioGroup>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/txtNewDatGen"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:visibility="gone"
                android:autofillHints="text"
                android:textColor="@color/negro"
                android:hint="@string/txtNuevo"
                android:textColorHint="@color/darkgray"
                tools:visibility="visible" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/txtEmailActu"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:autofillHints="emailAddress"
                android:hint="@string/txtNuevo"
                android:inputType="textEmailAddress"
                android:textColor="@color/negro"
                android:textColorHint="@color/darkgray"
                android:visibility="gone"
                tools:visibility="visible" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/txtNewDatNum"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:autofillHints="number"
                android:ems="10"
                android:hint="@string/txtNuevo"
                android:inputType="number"
                android:visibility="gone"
                android:textColor="@color/negro"
                android:textColorHint="@color/darkgray"
                tools:visibility="visible" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/txtNewDatPass"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:visibility="gone"
                android:autofillHints="password"
                android:hint="@string/txtNuevo"
                android:inputType="textPassword"
                android:textColor="@color/negro"
                android:textColorHint="@color/darkgray"
                tools:visibility="visible" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

                <LinearLayout
                    android:id="@+id/linLayConfChg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblConfChg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblConfCamb"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textColor="@color/negro"
                        tools:visibility="visible" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />

                    <EditText
                        android:id="@+id/txtConfChg"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints="password"
                        android:ems="10"
                        android:hint="@string/txtConfCamb"
                        android:visibility="gone"
                        android:inputType="textPassword"
                        android:textColor="@color/negro"
                        android:textColorHint="@color/darkgray"
                        android:background="@color/azulAlicia"
                        tools:visibility="visible" />

                    <CheckBox
                        android:id="@+id/chbConfPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/chbPass"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:textColor="@color/negro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtConfChg"
                        tools:visibility="visible" />
                </LinearLayout>

            <Button
                android:id="@+id/btnConfEditDataTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/btnConfEdit"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chbConfPass"
                tools:visibility="visible" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
